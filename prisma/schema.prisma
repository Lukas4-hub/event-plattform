generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ORGANIZER
  ATTENDEE
}

enum EditionStatus {
  DRAFT
  PUBLISHED
  CLOSED
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         Role     @default(ATTENDEE)

  events       Event[]  @relation("UserEvents")
  registrations Registration[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  ownerId     String
  title       String
  description String
  category    String?
  imageUrl    String?
  published   Boolean  @default(false)

  owner       User     @relation("UserEvents", fields: [ownerId], references: [id], onDelete: Cascade)
  editions    Edition[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([ownerId])
  @@index([published])
}

model Edition {
  id        String        @id @default(cuid())
  eventId   String
  name      String        // ej: "Edición 2026"
  startsAt  DateTime
  endsAt    DateTime
  location  String?
  isOnline  Boolean       @default(false)
  capacity  Int
  status    EditionStatus @default(DRAFT)

  event     Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  registrations Registration[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([eventId])
  @@index([startsAt])
}

model Registration {
  id        String   @id @default(cuid())
  editionId String
  userId    String

  edition   Edition  @relation(fields: [editionId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // evita doble registro del mismo usuario en la misma edición
  @@unique([editionId, userId])
  @@index([userId])
}
